<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ggg.mediafactory">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ggg.MainApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediaFactory">
        <activity
            android:name="com.ggg.handler.image.activity.ImageActivity"
            android:exported="false"
            android:label="@string/title_activity_image_color"
            android:theme="@style/Theme.MediaFactory.NoActionBar" />
        <activity
            android:name="com.ggg.handler.video.activity.VideoActivity"
            android:exported="false"
            android:label="@string/title_activity_image_color"
            android:theme="@style/Theme.MediaFactory.NoActionBar" />
        <activity
            android:name="com.ggg.enter.activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MediaFactory.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>